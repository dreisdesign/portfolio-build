# Environment Configuration Template
# Copy this file to .env and update with your specific values

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# SSH/SFTP Deployment Settings
DEPLOY_USER={{YOUR_DEPLOY_USER}}
DEPLOY_HOST={{YOUR_DEPLOY_HOST}}
DEPLOY_PORT={{YOUR_DEPLOY_PORT}}
DEPLOY_PATH={{YOUR_DEPLOY_PATH}}

# SSH Key Path (optional - uses default if not specified)
SSH_KEY_PATH={{YOUR_SSH_KEY_PATH}}

# ===========================================
# PROJECT CONFIGURATION
# ===========================================

# Project root directory (absolute path)
PROJECT_ROOT={{YOUR_PROJECT_ROOT}}

# Build output directory (relative to project root)
BUILD_OUTPUT=public_html

# Temporary build directory
TEMP_DIR=build/temp

# ===========================================
# IMAGE PROCESSING CONFIGURATION
# ===========================================

# Image quality (0-100)
IMAGE_QUALITY=85

# Responsive image sizes (comma-separated)
RESPONSIVE_SIZES=400,800,1200,1600

# Image formats to generate (comma-separated)
IMAGE_FORMATS=webp,avif,jpg

# Maximum image dimensions
MAX_IMAGE_WIDTH=2000
MAX_IMAGE_HEIGHT=2000

# ===========================================
# BUILD CONFIGURATION
# ===========================================

# Enable/disable build features
HTML_VALIDATION=true
LINK_CHECKING=true
IMAGE_OPTIMIZATION=true
MINIFICATION=true
COMPRESSION=true

# Performance budget (in KB)
PERFORMANCE_BUDGET_JS=250
PERFORMANCE_BUDGET_CSS=100
PERFORMANCE_BUDGET_IMAGES=500

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Development server port
DEV_SERVER_PORT=8080

# Enable live reload
LIVE_RELOAD=true

# Debug mode
DEBUG=false

# Verbose logging
VERBOSE=false

# ===========================================
# PORTFOLIO SPECIFIC CONFIGURATION
# ===========================================

# Portfolio data directory
PORTFOLIO_DATA_DIR=data

# Portfolio images directory
PORTFOLIO_IMAGES_DIR=assets/images/portfolio

# Default portfolio categories
DEFAULT_CATEGORIES=web-design,branding,development,print-design

# ===========================================
# NOTIFICATION CONFIGURATION (Optional)
# ===========================================

# Slack webhook for build notifications (optional)
SLACK_WEBHOOK_URL=

# Email notifications (optional)
NOTIFICATION_EMAIL=

# ===========================================
# EXAMPLE VALUES
# ===========================================
# These are example values - replace with your actual configuration

# DEPLOY_USER=myuser
# DEPLOY_HOST=myserver.com
# DEPLOY_PORT=22
# DEPLOY_PATH=/home/myuser/public_html
# SSH_KEY_PATH=/Users/myuser/.ssh/id_rsa
# PROJECT_ROOT=/Users/myuser/projects/my-portfolio
